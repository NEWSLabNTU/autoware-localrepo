#!/bin/sh
set -e

case "$1" in
    remove|purge)
        # Remove APT sources configuration
        rm -f /etc/apt/sources.list.d/autoware-localrepo.list
        rm -f /etc/apt/preferences.d/autoware-localrepo.pref
        ;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Do nothing
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
